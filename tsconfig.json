{
	"compilerOptions": {
		"outDir": "./dist",
		"module": "commonjs",
		"target": "es2017",
		"sourceMap": true,
		"declaration": true,
		"removeComments": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"incremental": true,
		"baseUrl": "./",
		"paths": {
			"@nestjs/sequelize": ["../test/node_modules/@nestjs/sequelize"],
			"ioredis": ["../test/node_modules/ioredis"],
			"sequelize": ["../test/node_modules/sequelize"],
			"sequelize-typescript": ["../test/node_modules/sequelize-typescript"]
		}
	},
	"include": ["src/**/*"]
}
